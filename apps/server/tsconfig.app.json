{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/datasources/controllers/*"],
      "@interface/*": ["src/datasources/interface/*"],
      "@model/*": ["src/datasources/models/*"],
      "@utils/*": ["src/datasources/utils/*"],
    },
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
