{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/datasources/controllers/*"],
      "@interface/*": ["src/datasources/interface/*"],
      "@model/*": ["src/datasources/models/*"],
      "@utils/*": ["src/datasources/utils/*"],
    },
  },
  "include": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts", "**/setup.ts"]
}
